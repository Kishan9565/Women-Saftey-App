<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.Fake_Call">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg">


        <ImageView
            android:id="@+id/callerImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/newperson"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/circle_white"
            android:padding="20dp"/>

        <!-- Calling text -->
        <TextView
            android:id="@+id/callingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_below="@id/callerImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <!-- Caller Name -->
        <TextView
            android:id="@+id/callerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@id/callingText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <!-- Center icons (mute, message) -->
        <LinearLayout
            android:id="@+id/centerIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/callerName"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/muteButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mic"
                android:background="@android:color/transparent"
                android:layout_margin="20dp"
                app:tint="#ffffff" />

            <ImageButton
                android:id="@+id/messageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/msg"
                android:background="@android:color/transparent"
                android:layout_margin="20dp"
                app:tint="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/acceptButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/call"
                android:background="@drawable/circle_green"
                android:layout_margin="60dp"
                app:tint="#ffffff" />


            <ImageButton
                android:id="@+id/declineButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/call_end"
                android:background="@drawable/circle_red"
                android:layout_margin="60dp"
                app:tint="#ffffff" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>